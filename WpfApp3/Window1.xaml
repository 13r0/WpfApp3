                </StackPanel>
                <StackPanel Margin="20 0 0 0">
                    <TextBlock FontWeight="Bold">End Date:</TextBlock>
                    <DatePicker/>
                </StackPanel>
            </StackPanel>
            <TextBlock FontWeight="Bold" Margin="0 20 0 10">Contact Information</TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock FontWeight="Bold">Email:</TextBlock>
                    <TextBlock>мой емаил</TextBlock>
                </StackPanel>
                <StackPanel Margin="20 0 0 0">
